@using Web.Areas.Admin.ViewModels.AboutIntro
@model AboutIntroIndexVM
<header>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</header>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About Intro Table</h6>
    </div>
    <div class="card-body">
        @if (Model.AboutIntro!=null)
        {
            <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                        <tr>
                            <td>@Model.AboutIntro.Id</td>
                            <td><img style="width:80px; height:80px; object-fit:contain;" src="~/assets/images/@Model.AboutIntro.PhotoName" /></td>
                            <td>@Html.Raw(Model.AboutIntro.Title)</td>
                            <td>@Html.Raw(Model.AboutIntro.Description)</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="aboutintro" asp-route-id="@Model.AboutIntro.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="aboutintro" asp-route-id="@Model.AboutIntro.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
        }
        else
        {
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="aboutintro">Create About Intro</a>
        }
        
    </div>
</div>