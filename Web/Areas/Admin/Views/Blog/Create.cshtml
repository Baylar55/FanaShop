@using Web.Areas.Admin.ViewModels.Blog;
@model BlogCreateVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Create Blog
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="blog" asp-area="admin">

                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <textarea class="form-control" asp-for="Title"></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Author">Author</label>
                                <input class="form-control" asp-for="Author">
                                <span class="text-danger" asp-validation-for="Author"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="QuoteAuthor">Quote Author</label>
                                <input class="form-control" asp-for="QuoteAuthor">
                                <span class="text-danger" asp-validation-for="QuoteAuthor"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Quote">Quote </label>
                                <textarea class="form-control" asp-for="Quote"></textarea>
                                <span class="text-danger" asp-validation-for="Quote"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CoverPhoto">Cover Photo</label>
                                <input class="form-control" asp-for="CoverPhoto">
                                <span class="text-danger" asp-validation-for="CoverPhoto"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photos">Photos</label>
                                <input class="form-control" asp-for="Photos">
                                @{
                                    if (Html.ViewData.ModelState["AboutPhotos"] != null)
                                    {
                                        foreach (var error in Html.ViewData.ModelState["AboutPhotos"].Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                }
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId"></label>
                                <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories"></select>
                                <span class="form-text text-danger " asp-validation-for="CategoryId"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

