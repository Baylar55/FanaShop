@using Web.Areas.Admin.ViewModels.Category
@model CategoryIndexVM
<header>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</header>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Category Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="category">Create Category</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Title</td>
                            <td>@category.CreatedAt</td>
                            <td>@category.ModifiedAt</td>
                            <td class="text-center">
                                <a asp-action="update" asp-controller="category" asp-route-id="@category.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td class="text-center">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="category" asp-route-id="@category.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>