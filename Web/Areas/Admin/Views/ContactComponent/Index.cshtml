@using Web.Areas.Admin.ViewModels.ContactComponent
@model ContactComponentIndexVM
<header>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</header>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Contact Components Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="contactComponent">Create Contact Component</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Icon</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contactComponent in Model.ContactComponents)
                    {
                        <tr>
                            <td>@contactComponent.Id</td>
                            <td style="font-size:30px; color:#2f4799">@Html.Raw(@contactComponent.IconCode)</td>
                            <td>@Html.Raw(contactComponent.Title)</td>
                            <td style="width:200px;">@Html.Raw(contactComponent.Description)</td>
                            <td>@contactComponent.CreatedAt</td>
                            <td>@contactComponent.ModifiedAt</td>
                            <td>
                                <a asp-action="update" asp-controller="contactComponent" asp-route-id="@contactComponent.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="contactComponent" asp-route-id="@contactComponent.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>