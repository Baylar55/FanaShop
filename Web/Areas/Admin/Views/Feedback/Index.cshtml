@using Web.Areas.Admin.ViewModels.Feedback
@model FeedbackIndexVM
<head>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</head>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Feedback Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="feedback">Create Feedback</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Feedback</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var review in Model.Feedbacks)
                    {
                        <tr>
                            <td>@review.Id</td>
                            <td><img style="width:80px; height:80px; object-fit:contain;" src="~/assets/images/@review.PhotoName" /></td>
                            <td>@review.ClientName</td>
                            <td>@review.Description</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="feedback" asp-route-id="@review.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="feedback" asp-route-id="@review.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>