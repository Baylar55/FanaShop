@using Web.Areas.Admin.ViewModels.HomeMainSlider
@model HomeMainSliderIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="homemainslider">Create Slider</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Order</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var slider in Model.HomeMainSlider)
                    {
                        <tr>
                            <td style="vertical-align:middle">@slider.Id</td>
                            <td><img style="width:100%; object-fit:cover;" src="~/assets/images/@slider.PhotoName" /></td>
                            <td style="vertical-align:middle">@Html.Raw(slider.Title)</td>
                            <td style="vertical-align:middle">@Html.Raw(slider.Description)</td>
                            <td style="vertical-align:middle">@slider.Order</td>
                            <td style="vertical-align:middle">@slider.CreatedAt.ToString("dddd, dd MMMM yyyy")</td>
                            <td style="vertical-align:middle">@slider.ModifiedAt.ToString("dddd, dd MMMM yyyy")</td>
                            <td style="vertical-align:middle" width="20px">
                                <a asp-action="update" asp-controller="homemainslider" asp-route-id="@slider.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td style="vertical-align:middle" width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="homemainslider" asp-route-id="@slider.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            @*<td style="vertical-align:middle" width="20px">
                                <a asp-action="details" asp-controller="homemainslider" asp-route-id="@slider.Id" class="btn btn-info">Details</a>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>