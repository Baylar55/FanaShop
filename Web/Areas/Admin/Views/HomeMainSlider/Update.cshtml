@using Core.Constants;
@using Core.Entities;
@using Web.Areas.Admin.ViewModels.HomeMainSlider
@model HomeMainSliderUpdateVM;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card mb-3">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Update MainSLider
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="homemainslider">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <textarea class="form-control" asp-for="Title"></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Order">Order</label>
                                <input class="form-control" asp-for="Order" min="1">
                                <span class="text-danger" asp-validation-for="Order"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
<script>

    const properties = ["Title", "Description"]

    properties.forEach(function (element) {

        ClassicEditor
            .create(document.querySelector(`#${element}`))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    })
</script>