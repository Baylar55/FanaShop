@using Web.Areas.Admin.ViewModels.Location
@model LocationIndexVM
<header>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</header>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Location Table</h6>
    </div>
    <div class="card-body">
        @if (Model.Location != null)
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Embed Code</th>
                            <th colspan="3" style="text-align:center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.Location.Id</td>
                            <td>@Html.Raw(Model.Location.EmbedCode)</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="location" asp-route-id="@Model.Location.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="location" asp-route-id="@Model.Location.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="location">Create Location</a>
        }

    </div>
</div>