@using Web.Areas.Admin.ViewModels.PriceRange
@model PriceRangeCreateVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="create" asp-controller="pricerange">
                            <div class="form-group">
                                <label asp-for="MinPrice">MinPrice</label>
                                <input class="form-control" asp-for="MinPrice">
                                <span class="text-danger" asp-validation-for="MinPrice"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaxPrice">MaxPrice</label>
                                <input class="form-control" asp-for="MaxPrice">
                                <span class="text-danger" asp-validation-for="MaxPrice"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Step">Step</label>
                                <input class="form-control" asp-for="Step">
                                <span class="text-danger" asp-validation-for="Step"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
