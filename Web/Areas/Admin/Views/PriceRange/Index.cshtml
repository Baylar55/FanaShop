@using Web.Areas.Admin.ViewModels.PriceRange
@model PriceRangeIndexVM
<header>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</header>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Price Range Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.PriceRange!=null)
            {
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Min Price</th>
                        <th>Max Price</th>
                        <th>Step</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.PriceRange.Id</td>
                        <td>@Model.PriceRange.MinPrice</td>
                        <td>@Model.PriceRange.MaxPrice</td>
                        <td>@Model.PriceRange.Step</td>
                        <td>@Model.PriceRange.CreatedAt</td>
                        <td>@Model.PriceRange.ModifiedAt</td>
                        <td class="text-center">
                            <a asp-action="update" asp-controller="PriceRange" asp-route-id="@Model.PriceRange.Id" class="btn btn-primary">Update</a>
                        </td>
                        <td class="text-center">
                            <form method="post">
                                <button asp-action="delete" asp-controller="PriceRange" asp-route-id="@Model.PriceRange.Id" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
                </table>
            }
            else
            {
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="pricerange">Create Price Range</a>
            }
        </div>
    </div>
</div>