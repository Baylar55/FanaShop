@using Web.Areas.Admin.ViewModels.Product;
@model ProductAddSizeVM;

@{
    var productId = Context.Request.RouteValues["id"];
}

<form method="post" asp-action="addsize" asp-controller="product" asp-area="admin">
    <input type="hidden" asp-for="@Model.ProductId" value="@productId" />
    <div class="form-control">

        <label style="display:block" asp-for="SizesIds"></label>
        <select multiple class="select mt-3" asp-for="SizesIds" asp-items="Model.Sizes"></select>
        <span class="d-block text-danger" style="font-size:14px" asp-validation-for="SizesIds"></span>
        <div class="form-text text-danger " asp-validation-summary="ModelOnly"></div>

        <div class="mt-3">
            <button type="submit" class="btn btn btn-primary">Add</button>
            <a asp-action="index" asp-controller="product" asp-area="admin" class="btn btn-light">Go to Back</a>
        </div>
    </div>
</form>