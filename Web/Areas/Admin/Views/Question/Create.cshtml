@using Core.Entities;
@using Web.Areas.Admin.ViewModels.Question
@model QuestionCreateVM;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Create Question
                        </p>
                        <form method="post" asp-action="create" asp-controller="question">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <textarea class="form-control" asp-for="Title"></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Answer">Answer</label>
                                <textarea class="form-control" asp-for="Answer"></textarea>
                                <span class="text-danger" asp-validation-for="Answer"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FAQCategoryId">Category</label>
                                <select class="form-control" asp-for="FAQCategoryId" asp-items="Model.Categories"></select>
                                <span class="text-danger" asp-validation-for="FAQCategoryId"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.20.1/full/ckeditor.js"></script>

<script>
    const properties = ["Title", "Answer"]
    properties.forEach(function (element) {
        CKEDITOR.replace(`${element}`);
    })
</script>