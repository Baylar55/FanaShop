@using Web.Areas.Admin.ViewModels.Question
@model QuestionIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Question Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="question">Create Question</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Answer</th>
                        <th>Category</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var question in Model.Questions)
                    {
                        <tr>
                            <td class="align-middle">@question.Id</td>
                            <td class="align-middle">@Html.Raw(question.Title)</td>
                            <td class="align-middle">@Html.Raw(question.Answer)</td>
                            <td class="align-middle">@question.FAQCategory.Title</td>
                            <td class="align-middle" width="20px">
                                <a asp-action="update" asp-controller="question" asp-route-id="@question.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td class="align-middle" width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="question" asp-route-id="@question.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>