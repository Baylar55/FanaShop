@using Web.Areas.Admin.ViewModels.StyleGallery
@model StyleGalleryIndexVM
<head>
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
</head>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Gallery Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="stylegallery">Create Style Gallery</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Cover Letter</th>
                        <th>Order</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.StyleGallerys)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img style="border-radius:50px; height:80px; object-fit:contain;" src="~/assets/images/@item.PhotoName" /></td>
                            <td>@item.CoverLetter</td>
                            <td>@item.Order</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="stylegallery" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="stylegallery" asp-route-id="@item.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>