@using Core.Entities;
@using Web.Areas.Admin.ViewModels.StyleGallery
@model StyleGalleryUpdateVM;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Update Gallery
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="stylegallery">
                            <div class="form-group">
                                <label asp-for="CoverLetter">Cover Letter</label>
                                <input class="form-control" asp-for="CoverLetter">
                                <span class="text-danger" asp-validation-for="CoverLetter"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Order">Order</label>
                                <input class="form-control" asp-for="Order">
                                <span class="text-danger" asp-validation-for="Order"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
