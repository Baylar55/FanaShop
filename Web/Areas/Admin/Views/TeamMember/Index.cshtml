@using Web.Areas.Admin.ViewModels.TeamMember
@model TeamMemberIndexVM
<head>
    <style>
        td{
            vertical-align:middle !important;
        }
    </style>
</head>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Team Member Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="teammember">Create Team Member</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Speciality</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var member in Model.TeamMembers)
                    {
                        <tr>
                            <td>@member.Id</td>
                            <td><img style="border-radius:50px; height:80px; object-fit:contain;" src="~/assets/images/@member.PhotoName" /></td>
                            <td>@member.Name</td>
                            <td>@member.Speciality</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="teammember" asp-route-id="@member.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="teammember" asp-route-id="@member.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>