                    <div class="card swiper-slide">
                    <div class="product-grid">
                        <div class="product-image">
                            <a href="#" class="image">
                                <img class="pic-1" src="~/assets/images/@product.MainPhoto">
                                <img class="pic-2" src="~/assets/images/@product.BackPhoto">
                            </a>
                            <span class="product-sale-label">@product.Status</span>
                        </div>
                        <div class="product-content">
                            <h3 class="title">
                                <a asp-action="singleproduct" asp-controller="shop" asp-route-id="@product.Id">
                                    @product.Name
                                </a>
                            </h3>
                            <div class="price">$@product.Price</div>
